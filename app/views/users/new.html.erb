<h1>Sign Up</h1>

<%= render partial: 'error', locals: {model: @user} %>

<%= form_for @user do |f| %>
    <%= render partial: 'form', locals: {f: f} %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.submit "Sign Up" %>
<% end %>
<br>
<div class="google-signin">
    <%= link_to image_tag("google-login.png"), '/auth/google_oauth2', method: :post %>
</div>