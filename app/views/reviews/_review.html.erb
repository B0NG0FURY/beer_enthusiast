<p>
    <% if @beer %>
        <strong><%= link_to review.user.username, user_beers_path(review.user) %></strong><br>
    <% elsif @user %>
        Beer: <%= link_to review.beer.name, beer_path(review.beer) %><br>
    <% end %>
    Rating: <%= review.rating %><br>
    <%= review.comment %>
    <% if review.user == current_user %>
        <br>
        <%= link_to "Edit Review", edit_beer_review_path(review.beer, review) %>
    <% end %>
</p>