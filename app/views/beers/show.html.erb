<h2><%= @beer.name %></h2>
<p>
    Brewed by: <%= @beer.brewery.name %><br>
    Style: <%= @beer.style %><br>
    ABV: <%= @beer.abv %><br>
    IBU: <%= @beer.ibu %>
</p>
<%= link_to "Review this beer", new_beer_review_path(@beer) %>

<h3>Reviews</h3>
<div>
    <% recent_reviews(@beer).each do |review| %>
    <p>
        <%= review.user.username %><br>
        Rating: <%= review.rating %><br>
        <%= review.comment %>
        <% if review.user == current_user %>
            <br>
            <%= link_to "Edit Review", edit_beer_review_path(@beer, review) %>
        <% end %>
    </p>
    <%= link_to "All Reviews", beer_reviews_path(@beer) %>
    <% end %>
</div>