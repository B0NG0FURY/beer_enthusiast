<div class="brewery-info">
    <h1><%= @brewery.name %></h1>
    <p>
        <%= @brewery.location %>
    </p>
</div>

<h3>
    Beers
    <% if @user %>
        tried
    <%end %>
</h3>

<div class="info-list">
    <% sort_beers_by_name(@beers).each do |beer| %>
        <%= render partial: "beers/beer", locals: {beer: beer} %>
    <% end %>
</div>