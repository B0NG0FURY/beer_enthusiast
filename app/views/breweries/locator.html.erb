<div class="form">
    <h2>Brewery Locator</h2>

    <%= form_with url: "/breweries/locator/results", method: :get, html: {class: "locator-form"} do |form| %>
        <%= form.label :type, "Location Type" %><br>
        <%= form.select :type, ["City", "Zip Code"] %><br><br>

        <%= form.label :location, "Location" %><br>
        <%= form.text_field :location, id: "location-text" %><br><br>

        <%= form.submit "Search", id: "locator-search" %>
    <% end %>
</div>