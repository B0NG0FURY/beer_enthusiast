<h1>Login</h1>

<% if flash[:error] %>
    <div id="error_explanation">
        <h3>Error</h3>
        <ul>
            <li><%= flash[:error] %></li>
        </ul>
    </div>
<% end %>

<%= form_for @user, url: '/login' do |f| %>
    <%= render partial: 'users/form', locals: {f: f} %>
    <%= f.submit "Login" %>
<% end %>